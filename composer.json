{
    "name": "afiqiqmal/country-holiday",
    "description": "A PHP package to retrieve holiday dates for various countries.",
    "type": "library",
    "keywords": ["php", "holidays", "dates", "countries", "calendar", "public holidays"],
    "license": "MIT",
    "authors": [
        {
            "name": "Hafiq Iqmal",
            "email": "hafiqiqmal93@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/afiqiqmal/country-holiday/issues",
        "source": "https://github.com/afiqiqmal/country-holiday"
    },
    "require": {
        "php": ">=8.2",
        "symfony/browser-kit": "^7.0",
        "symfony/http-client": "^7.0",
        "symfony/css-selector": "^7.0"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^5.2",
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Holiday\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Holiday\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
